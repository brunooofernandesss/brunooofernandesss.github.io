        // 1. GERAR GRÁFICO (Chart.js)
        const ctx = document.getElementById('meuGrafico').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'bar', // Tipo de gráfico: Barra
            data: {
                labels: ['Aula Expositiva', 'Aula com Jogos', 'Contação de Histórias'],
                datasets: [{
                    label: 'Nível de Engajamento (%)',
                    data: [40, 85, 75], // Dados fictícios
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100
                    }
                },
                animation: false // Desativar animação para garantir exportação correta
            }
        });

        // 2. EXPORTAR PARA PDF
        function exportPDF() {
            const element = document.getElementById('document-content');
            const opt = {
                margin:       [0, 0, 0, 0], // Margem zero pois o CSS .a4-page já tem padding
                filename:     'Projeto_Extensao_Pedagogia.pdf',
                image:        { type: 'jpeg', quality: 0.98 },
                html2canvas:  { scale: 2 },
                jsPDF:        { unit: 'mm', format: 'a4', orientation: 'portrait' }
            };
            html2pdf().set(opt).from(element).save();
        }

        // 3. EXPORTAR PARA WORD
        function exportWord() {
            // Para o Word, precisamos converter o Canvas (gráfico) em Imagem estática
            const canvas = document.getElementById('meuGrafico');
            const chartImgUrl = canvas.toDataURL("image/png");
            
            // Criar uma imagem temporária para substituir o canvas no HTML exportado
            const imgHtml = `<img src="${chartImgUrl}" style="width:100%; max-width:500px;">`;
            
            // Pegar o HTML
            let htmlContent = document.getElementById('document-content').innerHTML;
            
            // Hack simples: substituir o canvas pelo HTML da imagem na string
            // Nota: Isso depende da estrutura exata do ID container.
            // Para garantir, vamos fazer uma cópia do conteúdo para manipular
            let clone = document.getElementById('document-content').cloneNode(true);
            let canvasInClone = clone.querySelector('canvas');
            let parentDiv = canvasInClone.parentElement;
            
            // Substitui o canvas por imagem no clone
            let imgEl = document.createElement('img');
            imgEl.src = chartImgUrl;
            imgEl.style.width = '100%';
            parentDiv.innerHTML = '';
            parentDiv.appendChild(imgEl);

            // Cabeçalho para forçar o Word a reconhecer a codificação e layout
            const header = "<html xmlns:o='urn:schemas-microsoft-com:office:office' "+
                "xmlns:w='urn:schemas-microsoft-com:office:word' "+
                "xmlns='http://www.w3.org/TR/REC-html40'>"+
                "<head><meta charset='utf-8'><title>Export HTML to Word Document with JavaScript</title></head><body>";
            
            const footer = "</body></html>";
            const sourceHTML = header + clone.innerHTML + footer;
            
            const source = 'data:application/vnd.ms-word;charset=utf-8,' + encodeURIComponent(sourceHTML);
            
            const fileDownload = document.createElement("a");
            document.body.appendChild(fileDownload);
            fileDownload.href = source;
            fileDownload.download = 'Projeto_Extensao_Pedagogia.doc';
            fileDownload.click();
            document.body.removeChild(fileDownload);
        }
    </script>
